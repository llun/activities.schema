{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "skipLibCheck": true,
    "noEmitOnError": true,
    "strict": true,
    "resolveJsonModule": false,
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext"
  },
  "include": ["src"]
}
